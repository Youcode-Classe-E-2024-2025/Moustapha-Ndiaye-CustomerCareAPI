                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "title": {
                                                    "type": "string",
                                                    "example": "System Error #45"
                                                },
                                                "description": {
                                                    "type": "string",
